<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mjgv.shooter.android"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.VIBRATE"/>
    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mjgv.shooter.game.display.android.layout.PresentationActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="mjgv.shooter.game.display.android.layout.PlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="landscape">
        </activity>
        
        <activity 
            android:name="mjgv.shooter.game.display.android.layout.GameSummaryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="landscape">
        </activity>
        
        <activity 
            android:name="mjgv.shooter.game.display.android.layout.MenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
